@ARTICLE{2021A&A...648A..80H,
       author = {{Helling}, Ch. and {Worters}, M. and {Samra}, D. and {Molaverdikhani}, K. and {Iro}, N.},
        title = "{Understanding the atmospheric properties and chemical composition of the ultra-hot Jupiter HAT-P-7b. III. Changing ionisation and the emergence of an ionosphere}",
