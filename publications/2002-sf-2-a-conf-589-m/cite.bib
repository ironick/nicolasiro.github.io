 author = {Moutou, C. and Coustenis, A. and Iro, N. and Schneider, J. and Mayor, M. and Queloz, D.},
 booktitle = {SF2A-2002: Semaine de l'Astrophysique Francaise},
 editor = {Combes, F. and Barret, D.},
 month = {June},
 pages = {589},
 title = {VLT spectroscopy of HD209458b transits},
 year = {2002}
}
